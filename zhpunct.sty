\ProvidesPackage{zhpunct}[2024/05/11 Supports Chinese punctuation for LaTeX]

\NeedsTeXFormat{LaTeX2e}

\RequirePackage{ifthen}

\newcommand*{\fw}[1]{%
\ifthenelse{\equal{#1}{.}}{．}{}%
\ifthenelse{\equal{#1}{,}}{，}{}%
\ifthenelse{\equal{#1}{:}}{：}{}%
\ifthenelse{\equal{#1}{;}}{；}{}%
\ifthenelse{\equal{#1}{!}}{！}{}%
\ifthenelse{\equal{#1}{?}}{？}{}%
\ifthenelse{\equal{#1}{\~}}{～}{}%
\ifthenelse{\equal{#1}{/}}{／}{}%
\ifthenelse{\equal{#1}{(}}{（}{}%
\ifthenelse{\equal{#1}{)}}{）}{}%
\ifthenelse{\equal{#1}{[}}{［}{}%
\ifthenelse{\equal{#1}{]}}{］}{}%
\ifthenelse{\equal{#1}{\{}}{｛}{}%
\ifthenelse{\equal{#1}{\}}}{｝}{}%
}
\newcommand*{\ideo}[1]{%
\ifthenelse{\equal{#1}{.}}{。}{}%
\ifthenelse{\equal{#1}{,}}{、}{}%
}

\NewDocumentCommand{\twoemdash}{s}{%
\makebox[2em]{\IfBooleanTF{#1}{——}{⸺}}%
}
\NewDocumentCommand{\ellipsis}{s}{%
\makebox[2em]{\IfBooleanTF{#1}{……}{⋯⋯}}%
}
\NewDocumentCommand{\connector}{s}{%
\makebox[1em]{\IfBooleanTF{#1}{～}{–}}%
}
\NewDocumentCommand{\interpunct}{s}{%
\makebox[\IfBooleanTF{#1}{0.5em}{1em}]{·}%
}
