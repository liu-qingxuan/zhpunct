\RequirePackage{ifthen}

\newcommand*{\fw}[1]{%
\ifthenelse{\equal{#1}{.}}{．}{}%
\ifthenelse{\equal{#1}{,}}{，}{}%
\ifthenelse{\equal{#1}{:}}{：}{}%
\ifthenelse{\equal{#1}{;}}{；}{}%
\ifthenelse{\equal{#1}{!}}{！}{}%
\ifthenelse{\equal{#1}{?}}{？}{}%
\ifthenelse{\equal{#1}{\~}}{～}{}%
\ifthenelse{\equal{#1}{/}}{／}{}%
\ifthenelse{\equal{#1}{(}}{（}{}%
\ifthenelse{\equal{#1}{)}}{）}{}%
\ifthenelse{\equal{#1}{[}}{［}{}%
\ifthenelse{\equal{#1}{]}}{］}{}%
\ifthenelse{\equal{#1}{\{}}{｛}{}%
\ifthenelse{\equal{#1}{\}}}{｝}{}%
}
\newcommand*{\ideo}[1]{%
\ifthenelse{\equal{#1}{.}}{。}{}%
\ifthenelse{\equal{#1}{,}}{、}{}%
}

\NewDocumentCommand{\twoemdash}{s}{%
\makebox[2em]{\IfBooleanTF{#1}{——}{⸺}}%
}
\NewDocumentCommand{\ellipsis}{s}{%
\makebox[2em]{\IfBooleanTF{#1}{……}{⋯⋯}}%
}

